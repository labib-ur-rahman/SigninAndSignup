<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="sl_sidebar_icon">
        <item name="android:layout_marginBottom">@dimen/size_sidebar_margin</item>
        <item name="android:background">@drawable/sl_circle_bg</item>
        <item name="android:contextClickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:padding">@dimen/size_sidebar_padding</item>
        <item name="android:layout_height">@dimen/size_sidebar_icon_size</item>
        <item name="android:layout_width">@dimen/size_sidebar_icon_size</item>
    </style>

    <style name="sideBar">
        <item name="android:layout_width">@dimen/size_sidebar_width</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/sideBar_Bg</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="sideBarTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/size_small</item>
        <item name="android:fontFamily">@font/main_font_regular_2</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/mainContainer_SubHeadingText</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>